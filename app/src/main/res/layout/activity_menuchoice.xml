<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="17dp"
                android:paddingTop="22dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_logo_color"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#564283"
                    android:text="저혈당 도우미"
                    android:padding="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_predictbox">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="다음 저혈당 예측"
                            android:textSize="10dp"
                            android:layout_margin="12dp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/ml_tteresult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <ImageButton
                        android:id="@+id/btn_connectdexcom"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_connectdexcom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="bottom"
                        />
                    <ImageButton
                        android:id="@+id/btn_cgmlist"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_cgmlist"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="bottom"/>
                </LinearLayout>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/cgmchart"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:background="#f5f5f5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <FrameLayout
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:translationZ="1dp">
                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="65dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="20dp"
                                    android:src="@drawable/ic_calendar"
                                    android:translationZ="1dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/white"
                                    android:textSize="18dp"
                                    android:textAlignment="center"
                                    android:text="일정"/>
                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/button3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_mainmenubox"
                                >
                            </ImageButton>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:translationZ="1dp">
                                <ImageView
                                    android:layout_width="65dp"
                                    android:layout_height="65dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="20dp"
                                    android:src="@drawable/ic_map"
                                    android:translationZ="1dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/white"
                                    android:textSize="18dp"
                                    android:textAlignment="center"
                                    android:text="지도"/>
                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/button2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_mainmenubox"
                                >
                            </ImageButton>
                        </FrameLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:translationZ="1dp">
                                <ImageView
                                    android:layout_width="72dp"
                                    android:layout_height="72dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="20dp"
                                    android:src="@drawable/ic_friend"
                                    android:translationZ="1dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/white"
                                    android:textSize="18dp"
                                    android:textAlignment="center"
                                    android:text="친구등록"/>
                            </LinearLayout>

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_mainmenubox"
                                >
                            </ImageButton>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:translationZ="1dp">
                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="20dp"
                                    android:src="@drawable/ic_setting"
                                    android:translationZ="1dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/white"
                                    android:textSize="18dp"
                                    android:textAlignment="center"
                                    android:text="설정"/>
                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_mainmenubox"
                                >
                            </ImageButton>
                        </FrameLayout>
                    </TableRow>
                </TableLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문자 API"
                tools:layout_editor_absoluteX="136dp"
                tools:layout_editor_absoluteY="332dp" />

            <Button
                android:id="@+id/modelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="머신러닝"
                tools:layout_editor_absoluteX="136dp"
                tools:layout_editor_absoluteY="332dp" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>