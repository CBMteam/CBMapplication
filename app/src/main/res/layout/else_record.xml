<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <ImageButton
                android:id="@+id/btn_record_goback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_previous"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#564283"
                    android:text="기록하기"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="#564283"
                    android:text=""
                    />
            </LinearLayout>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_subbtnbox"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="시간 설정"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:gravity="left|center_vertical"
                android:textColor="#5C5273"
                android:textStyle="bold"
                android:stateListAnimator="@null"
                android:clickable="false"/>


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_down"
                android:layout_gravity="center_vertical | right"
                android:layout_marginRight="20dp"/>

        </FrameLayout>


        <TimePicker
            android:layout_height="200dp"
            android:layout_width="wrap_content"
            android:id="@+id/timePicker1"
            android:layout_marginLeft="30dp"
            android:timePickerMode="spinner"/>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_subbtnbox"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/caltitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:gravity="left|center_vertical"
                android:textColor="#5C5273"
                android:textStyle="bold"
                android:stateListAnimator="@null"
                android:clickable="false"/>


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_down"
                android:layout_gravity="center_vertical | right"
                android:layout_marginRight="20dp"/>

        </FrameLayout>


        <EditText
            android:id="@+id/addedit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="30dp"
            android:hint="기타 내용을 입력하세요"
            android:layout_marginLeft="30dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            >
            <Button
                android:layout_width="96dp"
                android:layout_height="49dp"
                android:text="등록"
                android:layout_margin="20dp"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:background="@drawable/bg_simplepurple"
                android:id="@+id/btnend"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>