<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="22dp">

        <ImageButton
            android:id="@+id/btn_friend_goback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_previous"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#564283"
                android:text="친구 등록하기"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#564283"
                android:text="저혈당 알림을 받을 친구를 등록하세요."
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <EditText
                android:id="@+id/et_searchfriend"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:ems="10"
                android:layout_gravity="center"
                android:background="@drawable/bg_loginedit"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:hint="등록할 email을 입력하세요"/>

            <ImageButton
                android:id="@+id/btn_searchid"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_search"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>